# Kalshi API credentials
# Sign up at https://kalshi.com (requires account approval)
KALSHI_API_KEY=your_kalshi_api_key
KALSHI_API_SECRET=your_kalshi_api_secret
KALSHI_ENV=demo  # demo or prod

# Databento API credentials
# Sign up at https://databento.com (offers free tier)
DATABENTO_API_KEY=your_databento_api_key

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Trading parameters
MIN_EDGE_THRESHOLD=0.01  # 100 bps minimum edge
MAX_POSITION_SIZE=100    # Max contracts per market
DAILY_LOSS_LIMIT=0.05    # 5% of capital
CAPITAL_PER_TRADE=0.02   # 2% of account per trade

# Monitoring
PROMETHEUS_PORT=8000
